{% extends 'layout.html.twig' %}
{% block body %}
        <article class="blog">
        <div class="date">
            <time datetime="{{ blog.created_at|date('c') }}">{{ blog.created_at|date('l, F j, Y') }}</time>
            <h1><a href="blog/{{blog.id}}" >{{ blog.title }}</a></h1>
        </div>
        <header>
        </header>
        <img src="/img/{{blog.image}}" />
        <div class="snippet">
        <p>{{blog.blog [:1000] }}</p>
        </div>
        <footer class="meta">
         <!--p>Comments: {{ blog.comments|length }}</p-->
                 <p>Comments: <a href="#">
                     {{ blog.comments|length }}
                 </a></p>
                 <p>Posted by <span class="highlight">{{blog.author}}</span> at 
                 {{ blog.created_at|date('h:iA')}}</p>
                 <p>Tags: <span class="highlight">{{ blog.tags }}</span></p>
            </footer>
        </article>
{% endblock %}